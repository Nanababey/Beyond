mixin serviceItems(icon, title, desc)
    .service-item
        .service-icon
            img(src=icon, alt="alt")
        h3.global-heading.global-heading--normal.service-title=title
        p.global-text.service-text=desc

mixin reviewsCard(image, name, job, desc, rating)
    .reviews-card
        .reviews-avatar
            img(src=image, alt="")
        h3.reviews-name=name 
        span.reviews-job=job 
        p.reviews-desc=desc
        .reviews-rating 
            img(src="./images/review_star.png", alt="")
            span= rating
        .reviews-quote
            img(src="./images/review_quote.png", alt="")


mixin blogItem(image, title, desc)
    .blog-item
        .blog-image
            img(src=image, alt="1")
        .blog-content
            h3.blog-title= title
            p.blog-desc= desc 